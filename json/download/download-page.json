{
    "type": "ListView.builder",
    "scroll_direction": "vertical",
    "itemExtent": 1.0,
    "dataBinding": "data",
    "no_data_widget": {
        "type": "Padding",
        "padding": "12,12,12,12",
        "child": {
            "type": "Center",
            "child": {
                "type": "Text",
                "data": "No Data Found!",
                "style": {
                    "fontSize": 18.0,
                    "fontWeight": "bold",
                    "color": "#FF0000"
                }
            }
        }
    },
    "itemChild": {
        "type": "Column",
        "children": [
            {
                "type": "Padding",
                "padding": "12,12,12,12",
                "child": {
                    "type": "Material",
                    "color": "#FFEEEE",
                    "shape": {
                        "side": {
                            "width": 0.5,
                            "color": "#808080"
                        },
                        "radius": "4.0:4.0, 4.0:4.0, 4.0:4.0, 4.0:4.0"
                    },
                    "elevation": 1.0,
                    "child": {
                        "type": "Padding",
                        "padding": "12,12,12,12",
                        "child": {
                            "type": "Column",
                            "children": [
                                {
                                    "type": "Row",
                                    "mainAxisAlignment": "spaceBetween",
                                    "crossAxisAlignment": "center",
                                    "children": [
                                        {
                                            "type": "Expanded",
                                            "child": {
                                                "type": "Text",
                                                "data": "{{description}}",
                                                "style": {
                                                    "color": "#000000",
                                                    "fontWeight": "bold",
                                                    "fontSize": 18.0
                                                }
                                            }
                                        },
                                        {
                                            "type": "IconButton",
                                            "icon": "download",
                                            "size": 26.0,
                                            "color": "#F43E20"
                                        }
                                    ]
                                },
                                {
                                    "type": "SizedBox",
                                    "height": 12.0
                                },
                                {
                                    "type": "ClipRRect",
                                    "radius": "5.0:5.0, 5.0:5.0, 0.0:0.0, 0.0:0.0",
                                    "child": {
                                        "type": "AspectRatio",
                                        "aspectRatio": 1.6,
                                        "child": {
                                            "type": "ImageNetwork",
                                            "src": "{{image}}"
                                        }
                                    }
                                },
                                {
                                    "type": "SizedBox",
                                    "height": 16.0
                                },
                                {
                                    "type": "Row",
                                    "mainAxisAlignment": "spaceBetween",
                                    "children": [
                                        {
                                            "type": "Expanded",
                                            "child": {
                                                "type": "Text",
                                                "data": "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.",
                                                "style": {
                                                    "color": "#000000",
                                                    "fontWeight": "normal",
                                                    "fontSize": 12.0
                                                },
                                                "maxLines": 5
                                            }
                                        },
                                        {
                                            "type": "IconButton",
                                            "icon": "share",
                                            "size": 26.0,
                                            "color": "#F43E20"
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                }
            }
        ]
    }
}
