{
    "type": "GridViewWidget",
    "dataBinding": "data",
    "child": {
        "type": "Padding",
        "padding": "8,8,8,8",
        "child": {
            "type": "Container",
            "decoration": {
                "color": "#F8F8F8",
                "radius": "5.0:5.0, 5.0:5.0, 5.0:5.0, 5.0:5.0"
            },
            "child": {
                "type": "Column",
                "mainAxisAlignment": "start",
                "crossAxisAlignment": "center",
                "children": [
                    {
                        "type": "ClipRRect",
                        "radius": "5.0:5.0, 5.0:5.0, 0.0:0.0, 0.0:0.0",
                        "child": {
                            "type": "AspectRatio",
                            "aspectRatio": 1.0,
                            "child": {
                                "type": "Padding",
                                "padding": "0,0,0,0",
                                "child": {
                                    "type": "ImageNetwork",
                                    "src": "{{image}}",
                                    "fit": "fill"
                                }
                            }
                        }
                    },
                    {
                        "type": "Expanded",
                        "child": {
                            "type": "Column",
                            "mainAxisAlignment": "center",
                            "children": [
                                {
                                    "type": "Padding",
                                    "padding": "4,0,4,0",
                                    "child": {
                                        "type": "Text",
                                        "data": "{{name}}",
                                        "style": {
                                            "fontSize": 16.0,
                                            "color": "#000000",
                                            "fontWeight": "bold"
                                        }
                                    }
                                },
                                {
                                    "type": "Padding",
                                    "padding": "4,0,4,0",
                                    "child": {
                                        "type": "Text",
                                        "data": "{{company}}",
                                        "style": {
                                            "fontSize": 14.0,
                                            "color": "#000000"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        }
    }
}
