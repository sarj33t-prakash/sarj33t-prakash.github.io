{
    "type": "CustomScrollView",
    "children": [
        {
            "type": "SliverGrid",
            "dataBinding": "data",
            "delegate": {
                "type": "Padding",
                "padding": "8,8,8,8",
                "child": {
                    "type": "Container",
                    "decoration": {
                        "color": "#FF9800",
                        "radius": "5.0:5.0, 5.0:5.0, 5.0:5.0, 5.0:5.0"
                    },
                    "child": {
                        "type": "Column",
                        "mainAxisAlignment": "start",
                        "crossAxisAlignment": "center",
                        "children": [
                            {
                                "type": "ClipRRect",
                                "radius": "5.0:5.0, 5.0:5.0, 0.0:0.0, 0.0:0.0",
                                "child": {
                                    "type": "AspectRatio",
                                    "aspectRatio": 1.0,
                                    "child": {
                                        "type": "ImageNetwork",
                                        "src": "{{image}}",
                                        "fit": "fill"
                                    }
                                }
                            },
                            {
                                "type": "Expanded",
                                "child": {
                                    "type": "Column",
                                    "mainAxisAlignment": "center",
                                    "children": [
                                        {
                                            "type": "Padding",
                                            "padding": "0,0,0,0",
                                            "child": {
                                                "type": "Text",
                                                "data": "{{name}}",
                                                "style": {
                                                    "fontSize": 18.0,
                                                    "color": "FFFFFF",
                                                    "fontWeight": "bold"
                                                }
                                            }
                                        },
                                        {
                                            "type": "Padding",
                                            "padding": "0,0,0,0",
                                            "child": {
                                                "type": "Text",
                                                "data": "{{company}}",
                                                "style": {
                                                    "fontSize": 16.0,
                                                    "color": "FFFFFF"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                }
            },
            "gridDelegate": {
                "type": "fixedCount",
                "crossAxisCount": 2,
                "childAspectRatio": 0.76
            }
        }
    ]
}
